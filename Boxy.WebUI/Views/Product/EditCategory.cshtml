@model Boxy.Domain.Entities.Category

@{
    ViewBag.Title = "Добавить категорию";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Добавить категорию товара</h2>
<div class="row u-mb-small">

    <div class="offset-2 col-md-8">
        @using (Html.BeginForm("EditCategory", "Product", FormMethod.Post))
    {
        <label class="c-field__label" for="input17">Родительская категория</label>
        @Html.HiddenFor(a => a.Id)
        <div class="c-field u-mb-small">
            @Html.DropDownListFor(a => a.ParentId, ViewBag.Category as SelectList, new { @class = "c-select" })
        </div>
        <div class="c-field u-mb-small">
            @Html.TextBoxFor(a => a.Name, new { @class = "c-input", @placeholder = "Название категории" })
        </div>
        <div class="c-field u-mb-small">
            @Html.TextBoxFor(a => a.Alias, new { @class = "c-input", @placeholder = "Alias" })
        </div>

        <button type="submit" class="c-btn c-btn--success c-btn--fullwidth">Сохранить</button>
}
    </div>
</div>
